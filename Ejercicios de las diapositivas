#Ejercio19 Elkin Diaz
#Tipos de datos

a=-1 #a es tipo int y su valor es -1
b=a+2 #b es de tipo int y su valor es 1
print ("b : a + 2 = ", b )

c=1.1+2.2
print("c: 1.1 + 2.2 = ", c)

#Ejercio20 Elkin Diaz
real=1.1 + 2.2 #Real es un float
print (real) #Representacion aproximada de 3.3 
print (f'{real: .2f}')#Unicamente mostrando 2 cifras decimales

un_real=1.1
otro_real=1/2
not_siend=1.23E3
print (un_real)
print (otro_real)
print (not_siend)

